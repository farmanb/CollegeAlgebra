<?xml version="1.0" encoding="UTF-8"?>
<worksheet xml:id="wksht-log" xmlns:xi="http://www.w3.org/2001/XInclude" component="notes">
  <title>Worksheet: The Natural Logarithm</title>
  <objectives>
    <ul>
      <li>
	Solve equations involving the exponential function.
      </li>
      <li>
	Solve equations involving the natural logarithm.
      </li>
    </ul>
  </objectives>
  <page>
    <title>Solving Equations with Exponential Functions</title>
    <exercise workspace="2in">
      <statement>
	<p>
	  Solve the equation
	  <me>\exp(2x + 1) = \exp(2)</me>
	  for <m>x</m>.
	</p>
      </statement>
    </exercise>
    
    <exercise workspace="2in">
      <statement>
	<p>
	  Solve the equation 
	  <me>\exp(-4x) = \exp(4)\exp\left(x^2\right)</me>
	  for <m>x</m>.
	</p>
      </statement>
    </exercise>

    <exercise workspace="2in">
      <statement>
	<p>
	  Solve the equation
	  <me>\exp(x^2) = \exp(−2x−1)</me>
	  for <m>x</m>
	</p>
      </statement>
    </exercise>
  </page>
  <page>
    <title>Solving Equations with Logarithms</title>
    <exercise workspace="2in">
      <statement>
	<p>
	  Solve the equation
	  <me>\ln(x + 3) + \ln(x − 3) = \ln(16)</me>
	  for <m>x</m>.
	</p>
      </statement>
    </exercise>
    <exercise workspace="2in">
      <statement>
	<p>
	  Solve the equation
	  <me>\ln(x - 5) - 2\ln\left(\frac{1}{\sqrt{x}}\right) = \ln(6).</me>
	  for <m>x</m>.
	</p>
      </statement>
    </exercise>
    <exercise  workspace="2in">
      <statement>
	<p>
	  Solve the equation
	  <me>-\ln\left(\frac{1}{5-x}\right)+2\ln\left(\sqrt{x+1}\right)=\ln\left(4\right)</me>
	  for <m>x</m>.
	</p>
      </statement>
    </exercise>
  </page>
</worksheet>
